<% if user_signed_in? %>
    <h1 class="mt-3">Friends index - show all friends</h1>
        <table class="table table-primary table-striped table-bordered table-hover text-center">
            <thead class="bg-success">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Twitter</th>
                <th>User ID</th>
                <th>Created_at</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
                
                    <% @friends.each do |friend| %>
                    <% if friend.user == current_user %>
                        <tr id="friends">
                            <td><%= link_to friend.first_name + ' ' + friend.last_name, friend, class: "nav-link text-primary" %></td>    
                            <td><%= friend.email %></td>          
                            <td><%= friend.phone %></td>          
                            <td><%= friend.twitter %></td>          
                            <td><%= friend.user_id %></td>          
                            <td><%= friend.created_at %></td>          
                          
                            <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-outline-success" %></td>         
                            <td><%= button_to "Delete", friend_path(friend), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-outline-danger" %></td>  
                        
                
                        </tr>
                    <% end %>
                    <% end %>
                    <%# <%= link_to 'Add Friend', friends_new_url, class:"nav-link text-light" %>

            
                <p></p>
            </tbody>
        </table>
    <%= link_to "New friend", new_friend_path, class:"btn btn-primary" %>
<% else%>
    <h1>Hello Rails</h1>
    <p>This is my first rails</p>
<% end %>