<div class="jumbotron mt-3 bg-light p-3">
  <h1 class="display-4"><%= @friend.first_name %><%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %></p>
  <br class="my-4">
  
  <div class="lead">
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary" %>
    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
    <%= button_to "Delete", @friend, method: :delete, class:"btn btn-danger mt-3" %>
  </p>
</div>

